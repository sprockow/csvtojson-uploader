<div class="box__input">
  <input class="box__file" type="file" name="datafile" id="file" />
   <div class="box__controls">
     <figure>
       {{inline-svg "/assets/upload.svg" class="foo"}}
     </figure>
      {{#if noFileSelected}}
        <label for="file">
            <strong>Choose a file&#8230;</strong>
        </label>
        <span>(or drag and drop)</span>
      {{/if}}
      {{#if hasFileSelected}}
        <span>File selected: {{selectedFile.name}}</span>
        <button class="box__button" type="submit">Begin upload</button>
     {{/if}}
     {{#if isUploading}}
        <span>Uploading {{selectedFile.name}}</span>
     {{/if}}
     {{#if isSuccessful}}
        <span>Uploaded {{selectedFile.name}}</span>
     {{/if}}
     {{#if error}}
      <span>An error occured {{error}}</span>
     {{/if}}
   </div>
 </div>
